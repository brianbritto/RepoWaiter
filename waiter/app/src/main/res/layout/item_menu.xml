<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp">

        <android.support.v7.widget.AppCompatTextView
            android:id="@id/txt_nameLM"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:hint="Ceviche de pescado"
            android:textSize="@dimen/item_menu"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_gravity="center"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@id/txt_priceLM"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:hint="22.00"
            android:gravity="center"
            android:textSize="@dimen/item_menu"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="end">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@id/imv_removeLM"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/ic_remove"
                    android:layout_gravity="end"/>

            </LinearLayout>

            <android.support.v7.widget.AppCompatTextView
                android:layout_weight="1"
                android:id="@id/txt_amountLM"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:hint="0"
                android:gravity="center"
                android:textSize="@dimen/item_menu"
                android:layout_gravity="center"
                android:text="@string/cero"/>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@id/imv_addLM"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/ic_added"
                    android:layout_gravity="start"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorDivider"/>

</LinearLayout>